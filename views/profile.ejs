<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.names %> | Edit Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <style>
    body { overflow-x: hidden; }
    header { position: sticky; top: 0; z-index: 1; }
    html { scroll-behavior: smooth; }
  </style>
</head>
<body class="bg-gray-50 text-gray-900">

  <!-- Navbar -->
  <%- include('partials/header') %>

  <!-- Profile Section -->
  <section class="max-w-4xl mx-auto px-6 py-16">
    <%- include("partials/messages") %>

    <div class="bg-white shadow-lg rounded-2xl p-8" data-aos="fade-up">
      
      <h2 class="text-2xl font-bold text-gray-800 text-center">üë§ Edit Profile</h2>
      <p class="text-gray-500 text-center mb-8">Update your profile information</p>

      <!-- Profile Form -->
      <form action="/profile/update" method="POST" enctype="multipart/form-data" class="space-y-6">
        
        <!-- Profile Picture -->
        <div class="flex flex-col items-center">
          <img src="/uploads/<%= user.profilePhoto || 'IMAGES/fran.png' %>" 
               alt="Profile Photo" 
               class="w-32 h-32 rounded-full border-4 border-yellow-400 shadow-md mb-4">
          <input type="file" name="profilePhoto" accept="image/*" 
                 class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4
                        file:rounded-full file:border-0 file:text-sm file:font-semibold
                        file:bg-yellow-400 file:text-indigo-900
                        hover:file:bg-yellow-300 cursor-pointer">
        </div>
        <span><small class="text-red-400">upload new photo</small></span>

        <!-- Full Name -->
        <div>
          <label class="block text-gray-700 font-medium mb-2">Full Name</label>
          <input type="text" name="names" value="<%= user.names %>" required
                 class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <!-- Email (Read-only) -->
        <div>
          <label class="block text-gray-700 font-medium mb-2">Email</label>
          <input type="email" name="email" value="<%= user.email %>" required
                 class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <!-- Date Created -->
        <div>
          <label class="block text-gray-700 font-medium mb-2">Date Created</label>
          <input type="text" value="<%= new Date(user.createdAt).toLocaleDateString() %>" readonly
                 class="w-full px-4 py-3 border rounded-lg bg-gray-100 cursor-not-allowed">
        </div>

        <!-- Actions -->
        <div class="flex justify-between items-center pt-6">
          <a href="/" class="text-gray-600 hover:text-indigo-600">‚Üê Back to Dashboard</a>
          <button type="submit"
                  class="bg-indigo-600 text-white px-6 py-3 rounded-full shadow hover:bg-indigo-500 transition">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </section>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <script>
    AOS.init({ duration: 1000, once: true });

  setTimeout(() => {
    const msg = document.getElementById("flash-message");
    if (msg) msg.remove();
  }, 5000);

  </script>
</body>
</html>
