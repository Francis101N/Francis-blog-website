<% if (success_msg && success_msg.length > 0) { %>
  <div id="flash-message" 
       class="mb-4 px-4 py-3 rounded-lg bg-green-100 text-green-800 border border-green-300 shadow-md">
    <%= success_msg %>
  </div>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
  <div id="flash-message" 
       class="mb-4 px-4 py-3 rounded-lg bg-red-100 text-red-800 border border-red-300 shadow-md">
    <%= error_msg %>
  </div>
<% } %>
