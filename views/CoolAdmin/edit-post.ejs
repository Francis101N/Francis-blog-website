                    <!-- row -->

                    <form action="/cooladmin/posts/update/<%= post._id %>" method="POST" enctype="multipart/form-data"
                        class="card shadow-sm p-4" style="max-width: 700px; margin:auto;">

                        <%- include('../partials/message2B') %>

                            <h5 class="card-title mb-3">Edit Blog Post</h5>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Blog Image</label>
                                <div class="d-flex align-items-center mb-2">
                                    <% if (post.blogImage) { %>
                                        <img src="/uploads/<%= post.blogImage %>" alt="Blog Image" class="rounded me-3"
                                            style="width:120px; height:80px; object-fit:cover;">
                                        <% } else { %>
                                            <span class="text-muted">No image uploaded</span>
                                            <% } %>
                                </div>
                                <input type="file" class="form-control" name="blogImage">
                            </div>

                            <div class="mb-3">
                                <label for="blogTitle" class="form-label fw-semibold">Blog Title</label>
                                <input type="text" id="blogTitle" name="blogTitle" class="form-control"
                                    value="<%= post.blogTitle %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="subTitle" class="form-label fw-semibold">Sub Title</label>
                                <input type="text" id="subTitle" name="subTitle" class="form-control"
                                    value="<%= post.subTitle %>">
                            </div>

                            <div class="mb-3">
                                <label for="author" class="form-label fw-semibold">Author</label>
                                <input type="text" id="author" name="author" class="form-control"
                                    value="<%= post.author %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="category" class="form-label fw-semibold">Category</label>
                                <input type="text" id="category" name="category" class="form-control"
                                    value="<%= post.category %>" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">Date Created</label>
                                <input type="text" class="form-control bg-light"
                                    value="<%= post.createdAt.toDateString() %>" readonly>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-save me-2"></i> Save Post
                            </button>
                    </form>

                </div>
